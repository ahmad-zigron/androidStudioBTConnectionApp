<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#080c47"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <Button
        android:text="Send"
        android:layout_width="300dp"
        android:layout_marginBottom="21dp"
        android:id="@+id/buttonSend"
        android:textColor="#080c47"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnGetLocation"
        android:textSize="18sp"
        android:layout_height="40dp"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Location "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/editTextSMS"
        android:layout_alignStart="@+id/editTextSMS"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Emergency No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextPhoneNo"
        android:layout_alignStart="@+id/editTextPhoneNo"
        android:id="@+id/textView6"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="03143577288"
        android:ems="10"
        android:id="@+id/editTextPhoneNo"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_marginBottom="26dp"
        android:selectAllOnFocus="true"
        android:singleLine="false"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/buttonSend"
        android:layout_alignStart="@+id/editTextSMS" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSMS"
        android:textColorHint="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="350dp"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnGetLocation"
        android:text="Request Location"
        android:background="@android:color/white"
        android:textColor="#080c47"
        android:layout_width="300dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:text="Send Your Location For Quick Response In Case Of Any Emergency!"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_weight="0.07"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />


</RelativeLayout>